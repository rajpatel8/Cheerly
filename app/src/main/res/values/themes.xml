<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Cheerly" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Cheerly_Orange</item>
        <item name="colorPrimaryVariant">@color/Cheerly_Orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Cheerly_Orange</item>
        <item name="colorSecondaryVariant">@color/Cheerly_Orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
    </style>
</resources>