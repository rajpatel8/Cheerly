<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Cheerly" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/Cheerly_Orange</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Login button style -->
    <style name="Widget.Cheerly.Button.Connect" parent="Widget.Material3.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Progress indicator style -->
    <style name="Widget.Cheerly.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorSize">24dp</item>
        <item name="trackThickness">2dp</item>
    </style>
</resources>