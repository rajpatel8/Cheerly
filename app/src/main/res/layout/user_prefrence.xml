<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cheerly"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#6200EA"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#6200EA"
            android:layout_marginVertical="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_preference_description"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- Music Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/music"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6200EA"
            android:layout_marginVertical="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_rock"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="@string/rock"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_jazz"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="@string/jazz"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_classical"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="@string/classical"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_hip_hop"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="@string/hip_hop"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_country"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="@string/country"
                android:layout_marginHorizontal="4dp"

                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- Videos Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/videos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6200EA"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_action"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="@string/action"
                android:layout_marginHorizontal="4dp"

                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_comedy"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="Comedy"
                android:layout_marginHorizontal="4dp"

                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_sci_fi"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="Sci-Fi"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_thriller"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="Thriller"
                android:layout_marginHorizontal="4dp"

                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_horror"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="Horror"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- Podcasts Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/podcasts"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6200EA"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_technology"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="Tech"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_health"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="Health"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_sports"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="Sports"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_business"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="@string/business"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_education"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="@string/education"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- Activities Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activities"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6200EA"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_gym"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="@string/gym"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_park"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="Park"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_cafe"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="Cafe"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_library"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="Library"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"
                />


            <Button
                android:id="@+id/btn_mall"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#0D0D0D"
                android:text="Mall"
                android:layout_marginHorizontal="4dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="16sp"
            />


<!---->
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:layout_marginTop="16dp">

            <!-- Minimal Bottom Background Section -->
            <View
                android:id="@+id/bottom_bg"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:background="#F3F4F6"
                app:layout_constraintBottom_toBottomOf="parent"
