<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheerly"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#6200EA"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#6200EA"
            android:layout_marginVertical="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please select your favorite genres for Music, Videos, Podcasts, and Activities."
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- Music Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6200EA"
            android:layout_marginVertical="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_rock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rock"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_jazz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jazz"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_classical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Classical"
                android:layout_marginHorizontal="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_hip_hop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hip-Hop"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Country"
                android:layout_marginHorizontal="4dp" />

        </LinearLayout>

        <!-- Videos Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Videos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6200EA"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Action"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_comedy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comedy"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_sci_fi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sci-Fi"
                android:layout_marginHorizontal="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_thriller"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thriller"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_horror"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Horror"
                android:layout_marginHorizontal="4dp" />

        </LinearLayout>

        <!-- Podcasts Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podcasts"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6200EA"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_technology"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Technology"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_health"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Health"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_sports"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sports"
                android:layout_marginHorizontal="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_business"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Business"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_education"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Education"
                android:layout_marginHorizontal="4dp" />

        </LinearLayout>

        <!-- Activities Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activities"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6200EA"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_gym"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gym"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_park"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Park"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_cafe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cafe"
                android:layout_marginHorizontal="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp">

            <Button
                android:id="@+id/btn_library"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Library"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_mall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mall"
                android:layout_marginHorizontal="4dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
