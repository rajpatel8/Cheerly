            android:id="@+id/btn_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="#0D0D0D"
            android:text="Mall"
            android:layout_marginHorizontal="4dp"
            android:padding="5dp"
